<Window x:Class="WpfSampleWithCaliburnMicro.Views.MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="265*"/>
            <ColumnDefinition Width="252*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="271*"/>
        </Grid.RowDefinitions>
        <Button Name="SeeSample" Grid.Row="0" Grid.Column="0" Margin="2">See Sample View Model</Button>
        <Button Name="SeeAnotherSample" Grid.Row="0" Grid.Column="1" Margin="2">Popup A Sample View Model</Button>
        <ContentControl Name="ActiveItem" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="2"/>
    </Grid>
</Window>
